{
    "name": "blog-nodejs",
    "version": "1.0.0",
    "description": "**Edit a file, create a new file, and clone from Bitbucket in under 2 minutes**",
    "main": "src/index.js",
    "scripts": {
        "beautiful": "prettier --single-quote --trailing-comma all --write --tab-width 4 'src/**/*.{js,json,scss}'",
        "watch": "node-sass --watch src/resources/scss/ --output src/public/css/",
        "start": "nodemon --inspect src/index.js ",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://hieunt1997@bitbucket.org/hieunt1997/blog-nodejs.git"
    },
    "author": "",
    "license": "ISC",
    "homepage": "https://bitbucket.org/hieunt1997/blog-nodejs#readme",
    "dependencies": {
        "express": "^4.17.1",
        "express-handlebars": "^5.2.0"
    },
    "devDependencies": {
        "husky": "^4.3.0",
        "lint-staged": "^10.5.1",
        "morgan": "^1.10.0",
        "node-sass": "^5.0.0",
        "nodemon": "^2.0.6",
        "prettier": "2.1.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,json,scss,md}": "prettier  --single-quote --trailing-comma all --write --tab-width 4"
    }
}
